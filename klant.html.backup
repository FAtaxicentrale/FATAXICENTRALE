  };
  let data;
  try {
    const res = await fetch(url, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Authorization': apiKey
      },
      body: JSON.stringify(body)
    });
    data = await res.json();
    if (!data.features || !data.features[0]) {
      showSubtleError('Route niet gevonden.', 'map');
      return;

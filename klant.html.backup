    });
    if (!response.ok) {
      alert('Betaling starten mislukt. Probeer het later opnieuw.');
      return;
    }
    const data = await response.json();
    if (data.checkoutUrl) {
      window.location.href = data.checkoutUrl;
    } else {
      alert('Geen betaallink ontvangen van de server.');
    }
  } catch (err) {
    alert('Er ging iets mis bij het starten van de betaling.');
    console.error(err);
  }
};
</script>
</body>
</html>

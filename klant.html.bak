  else if (afstand <= 7) basis = 16;
  else if (afstand <= 8) basis = 17.5;
  else if (afstand <= 9) basis = 19;
  else basis = 2.5 + (afstand * 1.5) + (duur * 0.5);

  let weerToeslag = 1;
  if (weer.toLowerCase().includes("patchy rain")) weerToeslag = 1.05;
  else if (weer.toLowerCase().includes("light rain")) weerToeslag = 1.10;
  else if (weer.toLowerCase().includes("moderate rain")) weerToeslag = 1.15;
  else if (weer.toLowerCase().includes("heavy rain")) weerToeslag = 1.20;
  else if (weer.toLowerCase().includes("torrential rain")) weerToeslag = 1.25;
  else if (weer.toLowerCase().includes("thunderstorm")) weerToeslag = 1.25;
  else if (weer.toLowerCase().includes("snow")) weerToeslag = 1.25;

  const drukte = bepaalDrukteToeslag();
  const nacht = bepaalNachttoeslag();

  const prijsNaToeslagen = basis * weerToeslag * drukte * nacht;

  // Bepaal uitleg van het basistarief
  let basisUitleg = '';
  if (afstand <= 3) basisUitleg = 'Afstand ≤ 3 km: vast tarief €10';
  else if (afstand <= 4) basisUitleg = 'Afstand ≤ 4 km: vast tarief €11,50';
  else if (afstand <= 5) basisUitleg = 'Afstand ≤ 5 km: vast tarief €13';
  else if (afstand <= 6) basisUitleg = 'Afstand ≤ 6 km: vast tarief €14,50';
  else if (afstand <= 7) basisUitleg = 'Afstand ≤ 7 km: vast tarief €16';
  else if (afstand <= 8) basisUitleg = 'Afstand ≤ 8 km: vast tarief €17,50';
  else if (afstand <= 9) basisUitleg = 'Afstand ≤ 9 km: vast tarief €19';
  else basisUitleg = `Afstand > 9 km: 2,50 + (afstand × 1,50) + (duur × 0,50) = €${basis.toFixed(2)}`;

  adminData = {
    basis,
    basisUitleg,
    afstand,
    duur,
    weerProcent: ((weerToeslag - 1) * 100).toFixed(0),
    weerEuro: (basis * (weerToeslag - 1)).toFixed(2),
    drukteProcent: ((drukte - 1) * 100).toFixed(0),
    drukteEuro: (basis * (drukte - 1)).toFixed(2),
    nachtProcent: ((nacht - 1) * 100).toFixed(0),
    nachtEuro: (basis * (nacht - 1)).toFixed(2),
    spoed: spoedToeslag,
    korting: 0,
    kortingBedrag: 0,
    tussenstops: [], // Wordt later ingevuld
    tussenstopDetails: [], // Wordt later ingevuld
    extraKmDoorTussenstops: 0,
    extraTijdDoorTussenstops: 0,
    extraKostenTussenstops: 0,
    tussenstopToeslag: 0
  };

  let totalePrijs = prijsNaToeslagen + spoedToeslag;

  // Instaptarief altijd toevoegen
  totalePrijs += 2.5;
  adminData.instaptarief = 2.5;

  // Extra kosten voor huisdieren
  if (document.getElementById("huisdieren").value === "1") {
    totalePrijs += huisdierenToeslag;
    adminData.huisdieren = "🚨 LET OP HUISDIEREN MEE 🚨";
  } else {
    adminData.huisdieren = "";
  }

  // Kosten voor geplande rit
  if (document.getElementById("tijdstip").value) {
    totalePrijs += 17.5;
    adminData.geplandeRit = "📅 LET OP GEPLANDE RIT 📅";
  } else {
    adminData.geplandeRit = "";
  }

  return totalePrijs;
}

// Function to convert latitude and longitude to tile coordinates (TMS/Slippy Map)
function deg2tile(lat_deg, lon_deg, zoom) {
  const lat_rad = Math.PI * lat_deg / 180;
  const n = Math.pow(2.0, zoom);
  const xtile = Math.floor((lon_deg + 180.0) / 360.0 * n);
  const ytile = Math.floor((1.0 - Math.log(Math.tan(lat_rad) + (1 / Math.cos(lat_rad))) / Math.PI) / 2.0 * n);
  return { x: xtile, y: ytile, zoom: zoom };
}

async function getTrafficToeslag(start, end) {
  try {
  const midLat = (start[1] + end[1]) / 2;
  const midLon = (start[0] + end[0]) / 2;
  // Flow data
  const flowUrl = `https://api.tomtom.com/traffic/services/4/flowSegmentData/absolute/10/json?point=${midLat},${midLon}&unit=KMPH&key=${TRAFFIC_API_KEY}`;
  let surcharge = 1;
  let flow = null;
  try {
    flow = await fetch(flowUrl).then(r=>r.json());
  } catch (e) {
    // Geen flowdata beschikbaar, geen toeslag
    flow = null;
  }
  if (flow && flow.flowSegmentData) {
    const { freeFlowSpeed, currentSpeed } = flow.flowSegmentData;
    const ratio = currentSpeed / freeFlowSpeed;
    if (ratio > 0.9) surcharge = 1;
    else if (ratio > 0.7) surcharge = 1.05;
    else if (ratio > 0.4) surcharge = 1.15;
    else surcharge = 1.5;
  }
  // Incidenten via NDW Open Data (gratis, Nederland)
  // NDW fileinformatie: https://opendata.ndw.nu/files_ndw.csv.gz (CSV) of https://opendata.ndw.nu/trafficspeed.xml.gz (XML)
  // Voorbeeld: we gebruiken de NDW actuele files als JSON via een proxy (of backend), want CORS blokkeert directe fetch naar .gz
    const ndwUrl = 'http://localhost:3001/api/ndwfiles';
    const ndwResp = await fetch(ndwUrl);

    if (!ndwResp || !ndwResp.ok) {
      console.warn('NDW incidenten niet beschikbaar');
      return surcharge;
    }

    // Haal NDW data op
    const ndwData = await ndwResp.json();

    // Hulpfuncties voor afstandsberekening
    const toRad = deg => deg * Math.PI / 180;
    const haversine = (lat1, lon1, lat2, lon2) => {
      const R = 6371;
      const dLat = toRad(lat2 - lat1);
      const dLon = toRad(lon2 - lon1);
      const a = Math.sin(dLat/2)**2 + Math.cos(toRad(lat1)) * Math.cos(toRad(lat2)) * Math.sin(dLon/2)**2;
      return R * 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
    };

    const pointToSegmentDistance = (lat, lon, lat1, lon1, lat2, lon2) => {
      const t = Math.max(0, Math.min(1, ((lat-lat1)*(lat2-lat1)+(lon-lon1)*(lon2-lon1)) / ((lat2-lat1)**2 + (lon2-lon1)**2)));
      const projLat = lat1 + t*(lat2-lat1);
      const projLon = lon1 + t*(lon2-lon1);
      return haversine(lat, lon, projLat, projLon);
    };

    // Route buffer in kilometers
    const routeBufferKm = 10;
    const [startLon, startLat] = start;
    const [endLon, endLat] = end;

    // Zoek files nabij de route
    const filesNearby = (ndwData || []).filter(f => {
      if (!f.latitude || !f.longitude) return false;
      const flat = parseFloat(f.latitude);
      const flon = parseFloat(f.longitude);
      return pointToSegmentDistance(flat, flon, startLat, startLon, endLat, endLon) <= routeBufferKm;
    });

    // Bereken toeslag op basis van aantal files
    if (filesNearby.length > 0) {
      surcharge *= 1 + (0.10 * filesNearby.length);
      console.log(`Aantal NDW files dichtbij route: ${filesNearby.length}, Nieuwe toeslag: ${surcharge}`);
    }

    return surcharge;
  } catch (err) {
    console.warn('Verkeersinformatie ophalen mislukt', err);
    alert('Let op: verkeersinformatie kon niet worden opgehaald. De ritprijs wordt zonder verkeersopslag berekend.');
    return 1;
  }
}

function pasKortingscodeToe(ritprijs) {
  const code = document.getElementById("kortingscode").value.trim();
  let perc = 0;
  if (code === "KORTING10") perc = 10;
  else if (code === "FATS20") perc = 20;
  else if (code === "FATS25") perc = 25;
  else if (code === "FATS30") perc = 30;

  adminData.korting = perc;
  adminData.kortingBedrag = (ritprijs * (perc / 100)).toFixed(2);
  return ritprijs * (1 - perc / 100);
}

async function berekenRit() {
  let ritprijs = 0;
  // Genereer een uniek rit-ID bij elke berekening
  window.currentRitID = generateRitID();
  try {
  const ophalen = document.getElementById("ophaaladres").value;
  const afzetten = document.getElementById("afzetadres").value;
  const tijd = document.getElementById("tijdstip").value;
  const betaalmethode = document.getElementById("betaalmethode").value;
  const opmerkingen = document.getElementById("opmerkingen").value;

  if (!ophalen || !afzetten) {
    showSubtleError("Vul alles correct in en ga akkoord met de voorwaarden.", 'ritprijs');
    return;
  }
  if (document.getElementById("akkoord").value !== "1") {
    showSubtleError("U dient akkoord te gaan met de annuleringskosten. Dit bedrag wordt niet in rekening gebracht als u binnen 5 minuten annuleert. Na 5 minuten worden annuleringskosten in rekening gebracht. Let op: Bij schade wordt de verzekering ingeschakeld. Reinigingskosten €450,-.", 'ritprijs');
    return;
  }

  // Verzamel tussenstops
  const tussenstops = [];
  for (let i = 1; i <= 3; i++) {
    const val = document.getElementById(`tussenstop${i}`)?.value?.trim();
    if (val) tussenstops.push(val);
  }
  
  // Bereken eerst de directe route (zonder tussenstops)
  let basisPrijs = 0;
  let basisAfstand = 0;
  let basisDuur = 0;
  let weer = null;
  let trafficTot = 1;
  let segmentDetails = [];
  let directeRouteDetails = {};
  
  try {
    // Coördinaten ophalen en afzet
    const coordOphaal = await getCoordinates(ophalen);
    const coordAfzet = await getCoordinates(afzetten);
    
    if (!coordOphaal || !coordAfzet) {
      showSubtleError("Kon één of meer adressen niet vinden", 'ritprijs');
      return;
    }
    
    // Weer ophalen (alleen nodig bij start)
    weer = await getWeer(coordOphaal[1], coordOphaal[0]);
    
    // Directe route berekenen
    const directeRouteURL = `https://api.openrouteservice.org/v2/directions/driving-car?api_key=5b3ce3597851110001cf6248b59dc263cab24bdabda48748cd9122b3&start=${coordOphaal[0]},${coordOphaal[1]}&end=${coordAfzet[0]},${coordAfzet[1]}`;
    const directeRes = await fetch(directeRouteURL);
    const directeData = await directeRes.json();
    
    if (!directeData.features || !directeData.features[0]) {
      showSubtleError("Kon geen route berekenen tussen ophaal- en afzetadres", 'ritprijs');
      return;
    }
    
    // Basis afstand en duur
    basisAfstand = directeData.features[0].properties.summary.distance / 1000;
    basisDuur = directeData.features[0].properties.summary.duration / 60;
    
    // Verkeersfactor
    const trafficMul = await getTrafficToeslag(coordOphaal, coordAfzet);
    trafficTot = trafficMul;
    
    // Basis prijs berekenen
    basisPrijs = berekenRitprijs(basisAfstand, basisDuur, weer) * trafficMul;
    
    directeRouteDetails = {
      afstand: basisAfstand,
      duur: basisDuur,
      prijs: basisPrijs
    };
    
    segmentDetails.push(`Directe route: ${ophalen} → ${afzetten}: €${basisPrijs.toFixed(2)}, ${basisAfstand.toFixed(1)} km, ${basisDuur.toFixed(0)} min`);
  } catch (err) {
    showSubtleError("Fout bij berekenen directe route", 'ritprijs');
    return;
  }
  
  // Als er tussenstops zijn, bereken de extra kosten
  let extraPrijs = 0;
  let extraAfstand = 0;
  let extraDuur = 0;
  let metTussenstopsAfstand = 0;
  let metTussenstopsDuur = 0;
  
  if (tussenstops.length > 0) {
    try {
      // Bereken route met tussenstops
      const alleAdressen = [ophalen, ...tussenstops, afzetten];
      let totaalAfstandMetTussenstops = 0;
      let totaalDuurMetTussenstops = 0;
      
      // Per segment berekenen
      for (let i = 0; i < alleAdressen.length - 1; i++) {
        const start = alleAdressen[i];
        const end = alleAdressen[i + 1];
        const coordStart = await getCoordinates(start);
        const coordEnd = await getCoordinates(end);
        
        if (!coordStart || !coordEnd) {
          showSubtleError(`Kon adres niet vinden: ${!coordStart ? start : end}`, 'ritprijs');
          continue;
        }
        
        const routeURL = `https://api.openrouteservice.org/v2/directions/driving-car?api_key=5b3ce3597851110001cf6248b59dc263cab24bdabda48748cd9122b3&start=${coordStart[0]},${coordStart[1]}&end=${coordEnd[0]},${coordEnd[1]}`;
        const res = await fetch(routeURL);
        const data = await res.json();
        
        if (!data.features || !data.features[0]) {
          showSubtleError(`Kon geen route berekenen voor segment ${i+1}`, 'ritprijs');
          continue;
        }
        
        const segmentAfstand = data.features[0].properties.summary.distance / 1000;
        const segmentDuur = data.features[0].properties.summary.duration / 60;
        
        totaalAfstandMetTussenstops += segmentAfstand;
        totaalDuurMetTussenstops += segmentDuur;
        
        // Alleen voor tussenstops details toevoegen
        if (i > 0 || i < alleAdressen.length - 2) {
          segmentDetails.push(`Segment ${i+1}: ${start} → ${end}: ${segmentAfstand.toFixed(1)} km, ${segmentDuur.toFixed(0)} min`);
        }
      }
      
      // Extra berekenen t.o.v. directe route
      metTussenstopsAfstand = totaalAfstandMetTussenstops;
      metTussenstopsDuur = totaalDuurMetTussenstops;
      extraAfstand = totaalAfstandMetTussenstops - basisAfstand;
      extraDuur = totaalDuurMetTussenstops - basisDuur;
      
      // Gebruik dezelfde tarieven als in berekenRitprijs functie
      // Voor afstanden > 9km: basis = 2.5 + (afstand * 1.5) + (duur * 0.5)
      const kmPrijs = 1.5;  // Uit de berekenRitprijs functie
      const minuutPrijs = 0.5;  // Uit de berekenRitprijs functie
      const basisToeslag = 2.5; // Uit de berekenRitprijs functie
      
      // Bereken extra kosten volgens dezelfde formule als de basis ritprijs
      extraPrijs = (basisToeslag + (extraAfstand * kmPrijs) + (extraDuur * minuutPrijs)) * trafficTot;
      
      // Toeslag per tussenstop (vaste kosten voor stoppen/wachten)
      const toeslagPerStop = 2.75; // Aangepast naar jouw tarief
      const tussenstopToeslag = tussenstops.length * toeslagPerStop;
      
      extraPrijs += tussenstopToeslag;
      
      segmentDetails.push(`Extra door tussenstops: +${extraAfstand.toFixed(1)} km, +${extraDuur.toFixed(0)} min, €${extraPrijs.toFixed(2)}`);
      segmentDetails.push(`Tussenstop toeslag: ${tussenstops.length} × €${toeslagPerStop.toFixed(2)} = €${tussenstopToeslag.toFixed(2)}`);
      
      // Voeg tussenstop details toe aan adminData
      adminData.tussenstops = tussenstops;
      adminData.tussenstopDetails = segmentDetails;
      adminData.extraKmDoorTussenstops = extraAfstand;
      adminData.extraTijdDoorTussenstops = extraDuur;
      adminData.extraKostenTussenstops = extraPrijs - tussenstopToeslag;
      adminData.tussenstopToeslag = tussenstopToeslag;
    } catch (err) {
      showSubtleError("Fout bij berekenen tussenstops", 'ritprijs');
      // Ga door met alleen de basisprijs
    }
  }
  
  // Totalen berekenen
  let totaalPrijs = basisPrijs + extraPrijs;
  let totaalAfstand = tussenstops.length > 0 ? metTussenstopsAfstand : basisAfstand;
  let totaalDuur = tussenstops.length > 0 ? metTussenstopsDuur : basisDuur;
  totaalPrijs = pasKortingscodeToe(totaalPrijs);

  // Pin bij chauffeur kosten 2.25%
  if (betaalmethode === 'Pin bij chauffeur') {
    adminData.pinProcent = 2.25;
    adminData.pinEuro = (totaalPrijs * 0.0225).toFixed(2);
    totaalPrijs *= 1.0225;
  } else {
    adminData.pinProcent = 0;
    adminData.pinEuro = 0;
  }

  // Toon spoedrit informatie aan klant
  let spoedInfo = "";
  if (spoedToeslag > 0) {
    spoedInfo = "🚨 SPOEDRIT - PRIORITEIT 🚨\n";
  }

  const tijdstipWeergave = tijd ? tijd : 'On-Demand';
  document.getElementById("resultaat").innerText = `${spoedInfo}🚖 Ritprijs: €${totaalPrijs.toFixed(2)}\n🛣️ Afstand totaal: ${totaalAfstand.toFixed(1)} km\n🕒 Duur totaal: ${totaalDuur.toFixed(0)} min\n${segmentDetails.join('\n')}\n🕒 Tijdstip: ${tijdstipWeergave}\n💳 Betaalmethode: ${betaalmethode}\n💳 Pin-kosten: ${adminData.pinProcent}% (€${adminData.pinEuro})\n📌 Annuleringskosten: €10 (niet inbegrepen)\n🎁 Korting toegepast: €${adminData.kortingBedrag}\n${adminData.geplandeRit}\n${adminData.huisdieren}`;

  // Sla de rit op in LocalStorage
  try {
    const ritten = JSON.parse(localStorage.getItem('ritten') || '[]');
    const nieuweRit = {
      ...adminData,
      timestamp: new Date().toLocaleString(),
      ritId: window.currentRitID,
      ophaaladres: ophalen,
      afzetadres: afzetten,
      tijdstip: tijdstipWeergave,
      betaalmethode: betaalmethode,
      kortingscode: document.getElementById('kortingscode').value.trim() || 'Geen',
      huisdieren: document.getElementById('huisdieren')?.value || 'Nee',
      spoedrit: spoedToeslag > 0 ? 'Ja' : 'Nee',
      geplandeRit: tijd ? 'Ja' : 'Nee',
      pinProcent: adminData.pinProcent,
      pinEuro: adminData.pinEuro,
      verkeerProcent: adminData.verkeerProcent,
      verkeerEuro: adminData.verkeerEuro,
      ritprijs: (typeof ritprijs === 'number' ? ritprijs.toFixed(2) : '0.00'),
      opmerkingen: opmerkingen || 'Geen'
    };
    ritten.push(nieuweRit);
    localStorage.setItem('ritten', JSON.stringify(ritten));
    // Zet lastPrice voor iDEAL altijd na berekening als float
    if (typeof ritprijs === 'number' && !isNaN(ritprijs)) {
      window.lastPrice = parseFloat(ritprijs);
    } else {
      window.lastPrice = 0;
    }
  } catch(e) {
    alert('Rit kon niet worden opgeslagen. Probeer het later opnieuw.');
    //console.error('Rit niet opgeslagen:', e);
  }

  // Voeg spoedrit informatie toe aan WhatsApp bericht voor chauffeur
  let spoedBericht = "";
  if (spoedToeslag > 0) {
    spoedBericht = "🚨🚨🚨 SPOEDRIT - PRIORITEIT AUB DIRECT AFHANDELEN 🚨🚨🚨\n";
  }

  const bericht = `${spoedBericht}🚖 FA TAXI SERVICE 4 Personen 🚖\n📲 Nieuw ritverzoek\n📍 Ophaaladres: ${ophalen}\n📍 Afzetadres: ${afzetten}\n🕒 Tijdstip: ${tijdstipWeergave}\n💳 Betaalmethode: ${betaalmethode}\n${opmerkingen ? '✏️ Opmerkingen: ' + opmerkingen + '\n' : ''}${document.getElementById("resultaat").innerText}`;
  document.getElementById("whatsappKnop").href = `https://wa.me/message/WPXHSY3TEYVPA1?text=${encodeURIComponent(bericht)}`;
  // WhatsApp-knop zichtbaarheid ALLEEN via updateWhatsappKnopVisibility()
  if (typeof updateWhatsappKnopVisibility === 'function') updateWhatsappKnopVisibility();

  // iDEAL knop wordt altijd via updateWhatsappKnopVisibility geregeld
  lastPrice = ritprijs;

  } catch (err) {
    alert("Er is een fout opgetreden bij het berekenen van de rit: " + (err.message || err));
  }
}

